<div>
    <form method="post" enctype="application/x-www-form-urlencoded" action="#">
        <div class="form-group {{# if InvalidUser}}has-error{{/if}}">
            <label for="username">Username</label>
            <input type="text" name="username" id="username" value="{{Model.Username}}" class="form-control">
            <div {{# unless InvalidUser}} style="display: none" {{/unless}} class="alert alert-danger" role="alert">
                {{InvalidUserMessage}}
            </div>
        </div>
        <div class="form-group {{# if InvalidPassword}}has-error{{/if}}">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" class="form-control">
            <div {{# unless InvalidPassword}} style="display: none" {{/unless}} class="alert alert-danger" role="alert">
                {{InvalidPasswordMessage}}
            </div>
        </div>
        <div class="form-group {{# if InvalidPasswordConfirm}}has-error{{/if}}">
            <label for="passwordConfirm">Password Confirmation</label>
            <input type="password" name="passwordConfirm" id="passwordConfirm" class="form-control">
            <div {{# unless InvalidPasswordConfirm}} style="display: none" {{/unless}} class="alert alert-danger" role="alert">
                {{InvalidPasswordConfirmMessage}}
            </div>
        </div>
        <button class="btn btn-primary" type="submit">Login</button>
    </form>
    <br />
    <div><span>Already have an account?</span> <a href="/shrtnr/Login/">Log in</a></div>
</div>